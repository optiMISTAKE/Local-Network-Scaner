<UserControl x:Class="Local_Network_Scanner.View.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Local_Network_Scanner.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">

        <StackPanel Orientation="Vertical">
            
            <Label Content="Skaner Sieci Lokalnej" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36"/>

            <Button Content="Przejdź do głównego skanera"
                Width="200" Height="50"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10"
                Command="{Binding NavigateToMainScanCommand}"/>

            <Button Content="Przejdź do skanowania Bluetooth"
                Width="200" Height="50"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10"
                Command="{Binding NavigateToBluetoothScanningCommand}"/>

        </StackPanel>

    </Grid>
</UserControl>
