<UserControl x:Class="Local_Network_Scanner.View.BluetoothScan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Local_Network_Scanner.View"
             xmlns:cvrt="clr-namespace:Local_Network_Scanner.Misc"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <cvrt:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </UserControl.Resources>
    
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical">
            <Label Content="Bluetooth Scan View"
                   
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="24"
               FontWeight="Bold"/>

            <Label Content="Scan Speed"
                   VerticalAlignment="Top"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="5"/>

            <ComboBox Width="150"
                      Height="30"
                      HorizontalAlignment="Left"
                      Margin="5,0,0,5"
                      FontSize="14"
                      FontWeight="Normal"
                      ItemsSource="{Binding ScanSpeedPresets}"
                      SelectedItem="{Binding SelectedScanSpeedPreset, Mode=TwoWay}"/>

            <Button Content="Start Bluetooth Scan"
                    Width="150"
                    Height="35"
                    HorizontalAlignment="Left"
                    FontWeight="Medium"
                    FontSize="16"
                    Margin="5,5,0,5"
                    IsEnabled="{Binding IsScanningForUI, Converter={StaticResource InverseBoolConverter}}"
                    Command="{Binding StartScanCommand}"
                    />

            <Button Content="Stop Bluetooth Scan"
                    Width="150"
                    Height="35"
                    HorizontalAlignment="Left"
                    FontWeight="Medium"
                    FontSize="16"
                    Margin="5,5,0,5"
                    IsEnabled="{Binding IsScanningForUI}"
                    Command="{Binding StopScanCommand}"/>

            <Button Content="Back to Main Menu"
                    Width="150"
                    Height="35"
                    HorizontalAlignment="Left"
                    FontWeight="Medium"
                    FontSize="16"
                    Margin="5,5,0,5"
                    Command="{Binding NavigateToMainMenuCommand}"/>
        </StackPanel>

        <ListView Grid.Column="1"
                  ItemsSource="{Binding BluetoothDevices}"
                  Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Device Name" Width="125" DisplayMemberBinding="{Binding LocalName}"/>
                    <GridViewColumn Header="MAC Address" Width="100" DisplayMemberBinding="{Binding BluetoothAdressHex}"/>
                    <GridViewColumn Header="RSSI" Width="50" DisplayMemberBinding="{Binding Rssi}"/>
                    <GridViewColumn Header="Services Summary" Width="300" DisplayMemberBinding="{Binding ServiceSummary}"/>
                </GridView>
            </ListView.View>
        </ListView>



    </Grid>
</UserControl>
