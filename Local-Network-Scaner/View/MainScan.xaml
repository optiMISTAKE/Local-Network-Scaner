<UserControl x:Class="Local_Network_Scanner.View.MainScan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Local_Network_Scanner.View"
             xmlns:cvrt="clr-namespace:Local_Network_Scanner.Misc"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900">
    <UserControl.Resources>
        <cvrt:BoolConverter x:Key="BoolConverter"/>

        <Style x:Key="WrapTextStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>

    </UserControl.Resources>

    <Grid Background="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <Label Content="Skaner Sieci Lokalnej" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Black" FontSize="36"/>

            <Label Content="Wybierz interfejs sieciowy:"
                   HorizontalAlignment="Left"
                   Margin="0,10,0,0"
                   FontSize="20"
                   FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding AvailableNetworkInterfaces}"
                      DisplayMemberPath="DisplayNetworkName"
                      SelectedItem="{Binding CurrentlySetNetInterface}"
                      Width="300"
                      HorizontalAlignment="Left"
                      Margin="5,10,0,10"/>

            <StackPanel Orientation="Horizontal">
                <Label Content="Scan Speed"
                   VerticalAlignment="Top"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="5"/>

                <ComboBox Width="150"
                      Height="30"
                      HorizontalAlignment="Left"
                      Margin="5,0,0,5"
                      FontSize="14"
                      FontWeight="Normal"
                      ItemsSource="{Binding ScanSpeedPresets}"
                      SelectedItem="{Binding SelectedScanSpeedPreset, Mode=TwoWay}"/>

                <!-- Scan button -->
                <Button Content="Skanuj Sieć"
                    Width="120"
                    Height="35"
                    HorizontalAlignment="Left"
                    FontWeight="Medium"
                    FontSize="16"
                    Margin="5,5,0,5"
                    Command="{Binding ScanCommand}"/>

                <Button Content="Stop Scan"
                    Width="120"
                    Height="35"
                    HorizontalAlignment="Left"
                    FontWeight="Medium"
                    FontSize="16"
                    Margin="5,5,0,5"
                    Command="{Binding StopScanCommand}"
                    IsEnabled="{Binding IsScanningForUI, Converter={StaticResource BoolConverter}}" />

                <!--DELETE LATER-->
                <Button Content="Test OUI"
                    Width="120"
                    Height="35"
                    HorizontalAlignment="Left"
                    FontWeight="Medium"
                    FontSize="16"
                    Margin="5,5,0,5"
                    Command="{Binding TestOUI}" />

                <Button Content="Bluetooth Scan"
                    Width="120"
                    Height="35"
                    HorizontalAlignment="Left"
                    FontWeight="Medium"
                    FontSize="16"
                    Margin="5,5,0,5"
                    Command="{Binding NavigateToBluetoothScanningCommand}" />
            </StackPanel>

            <StackPanel Grid.Row="0" Margin="10">

                <ProgressBar
                    Height="20"
                    Minimum="0"
                    Maximum="100"
                    Value="{Binding ScanProgressPercent, Mode=OneWay}"/>

                <TextBlock
                    Text="{Binding ScanProgressPercent, StringFormat=Scanning... {0}%, Mode=OneWay}"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,0"/>

            </StackPanel>

        </StackPanel>

        <!-- DataGrid to show results -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Devices}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,10,0,0">

            <DataGrid.Columns>

                <DataGridTextColumn Header="IP"
                                    Binding="{Binding IPAddress}"
                                    Width="*"/>

                <DataGridTextColumn Header="Alive"
                                    Binding="{Binding IsActiveDisplay}"
                                    Width="70"/>

                <DataGridTextColumn Header=" MAC "
                                    Binding="{Binding MACAddress}"
                                    Width="*"/>

                <DataGridTextColumn Header="Vendor"
                                    Binding="{Binding VendorDisplay}"
                                    Width="*"/>

                <DataGridTextColumn Header="Hostname"
                                    Binding="{Binding HostName}"
                                    Width="*"/>

                <DataGridTextColumn Header="Open Ports"
                                    Binding="{Binding OpenPortsDisplay}"
                                    Width="*"/>

                <DataGridTextColumn Header="Banner"
                                    Binding="{Binding Banner}"
                                    Width="2*"
                                    ElementStyle="{StaticResource WrapTextStyle}"/>

            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</UserControl>
